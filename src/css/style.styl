// Import all partials
@require './_*.styl'

.login
  display flex
  flex-direction column
  background primary
  color white
  min-height 100 vh

.login h1
  background primaryD
  color white

.login .buttons
  align-self center
  display flex
  flex-direction column
  max-width 200px
  margin-top 2rem

.login .buttons > button
  margin-bottom 1rem

.small-button
  border 0
  border-radius 9999px

.primaryD
  background primaryD
  color white 

.meeting-list
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-gap 1rem

.balancer.person-card
  max-width 500px
  margin 3rem auto
  display grid
  grid-template-columns 1fr auto
  grid-gap 2rem

.balancer.person-card .person-details-extended
  display grid
  grid-template-columns 1fr
  grid-gap 1rem

.card
  border-radius 3px
  box-shadow 0 1px 1px 0 rgba(60,64,67,.08), 0 1px 3px 1px rgba(60,64,67,.16)
  padding 1.5rem

.container
  margin 0 auto
  padding 0 2rem
  max-width 990px